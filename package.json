{
  "name": "@mixgeeker/node-escpos-win",
  "version": "1.0.14",
  "description": "ESC/POS printer driver for Node.js on Windows, supporting both English and Chinese",
  "main": "index.js",
  "types": "index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "install": "node -e \"if (process.platform === 'win32') { const { execSync } = require('child_process'); execSync('node-gyp rebuild', { stdio: 'inherit' }); } else { console.log('Skipping build on non-Windows platform'); }\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "escpos",
    "printer",
    "windows",
    "pos",
    "thermal-printer",
    "receipt-printer",
    "chinese",
    "gbk",
    "image"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MixGeeker/ESCPOS-for-Windows.git"
  },
  "bugs": {
    "url": "https://github.com/MixGeeker/ESCPOS-for-Windows/issues"
  },
  "homepage": "https://github.com/MixGeeker/ESCPOS-for-Windows#readme",
  "author": "DevTomato <微信：LinkTYLinkBY>",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "iconv-lite": "^0.6.3",
    "jimp": "^0.22.12",
    "node-addon-api": "^7.1.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "gypfile": true,
  "files": [
    "index.js",
    "index.d.ts",
    "src/",
    "binding.gyp",
    "README.md",
    "README-EN.md",
    "LICENSE"
  ]
}
